@model IEnumerable<EShop.Admin.ViewModels.Components.CircleComponentItemViewModel>


@{
    ViewData["Title"] = "مدیریت کامپوننت های دایره ای";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Html.Partial("_alert")


<div class="modal fade in" id="modal-delete" style="padding-right: 17px;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"> حذف</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <p>آیا میخواهید این کامپوننت را حذف کنید؟</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">خیر</button>
                <form asp-action="DeleteCircleComponent">
                    <input type="hidden" name="id" class="deleteid" />

                    <button type="submit" class="btn btn-primary">بله</button>
                </form>
            </div>
        </div>
    </div>
</div>

<section id="extended">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">لیست کامپوننت ها</h4>
                    </div>
                </div>
                <div class="card-body">

                    <div class="card-block">
                        <div class="box-header with-border">
                            <a asp-action="CreateCircleComponent" class="btn btn-primary mb-2">
                                <i class="ft-plus"></i>
                                ایجاد کامپوننت
                            </a>
                        </div>
                        <table class="table table-striped table-bordered table-responsive-sm table-configuration">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Title)
                                    </th>
                                      <th>
                                        @Html.DisplayNameFor(model => model.Order)
                                    </th>
                                    <th>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                          <td>
                                            @Html.DisplayFor(modelItem => item.Order)
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="UpdateCircleComponent" asp-route-id="@item.Id">ویرایش</a>

                                            <button type="button" class="danger border-0 bg-transparent  p-0 btn-delete" 
                                            delete data-id="@item.Id" data-toggle="modal" data-target="#modal-delete">
                                                <i class="fa fa-trash-o font-medium-3 mr-2"></i>

                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
<script src="/Admin/js/components-modal.min.js"></script>

<script>
    $(".btn-delete").click(function () {
        var id = $(this).data("id");
        $(".deleteid").val(id);
    })
</script>
}

