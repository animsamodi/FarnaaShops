@using EShop.DataLayer.Enum
@using EShop.Core.Helpers
@model IEnumerable<EShop.DataLayer.Entities.Order.Shipment>

@{
    ViewData["Title"] = "روش های ارسال";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Html.Partial("_alert")

<section id="extended">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">روش های ارسال</h4>
                    </div>
                </div>
                <div class="card-body">

                    <div class="card-block">
                        <div class="box-header with-border">
                            <a asp-action="CreateShipment" class="btn btn-primary mb-2">
                                <i class="ft-plus"></i>
                                ایجاد روش ارسال
                            </a>
                        </div>
                        <table class="table table-striped table-bordered table-responsive-sm table-configuration">
                            <thead>
                            <th>
                                کد رایانه
                            </th>
                            <th>
                                نوع سیستم
                            </th>
                            <th>
                                عنوان
                            </th>
                            <th>
                                نوع
                            </th>
                            <th>
                                عنوان برای Crm
                            </th>
                            <th>
                                مبلغ
                            </th>
                            <th>
                                مبلغ برای کالای اضافه
                            </th>
                            <th>
                                استان
                            </th>
                            <th>
                                شهر
                            </th>
                            <th>
                                وضعیت
                            </th>
                            <th>
                                چک کردن پیش فروش
                            </th>
                            <th>
                            </th>

                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {


                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TypeSystem)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Type)
                                        </td>     <td>
                                            @Html.DisplayFor(modelItem => item.TitleCrm)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PricePerAddProduct)
                                        </td>

                                        <td>
                                            @if (item.Province != null)
                                            {
                                                @item.Province.ProvinceName
                                            }
                                        </td>
                                        <td>
                                            @if (item.City != null)
                                            {
                                                @item.City.CityName
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsActive)

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CheckPreSell)

                                        </td>
                                        <td>
                                            <a asp-action="EditShipment" asp-route-id="@item.Id" class="success p-0" data-original-title="ویرایش" title="ویرایش">
                                                <i class="fa fa-pencil font-medium-3 mr-2"></i>
                                            </a>
                                        </td>


                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

