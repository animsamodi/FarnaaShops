@using EShop.DataLayer.Enum
@using EShop.Core.Helpers
@model IEnumerable<EShop.DataLayer.Entities.Address.BlockPostalCode>

@{
    ViewData["Title"] = "کد پستی های غیر مجاز";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Html.Partial("_alert")

<section id="extended">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">کد پستی های غیر مجاز</h4>
                    </div>
                </div>
                <div class="card-body">

                    <div class="card-block">
	                    <div class="box-header with-border">
		                    <a asp-action="CreateBlockPostCode" class="btn btn-primary mb-2">
			                    <i class="ft-plus"></i>
			                    افزودن
		                    </a>
	                    </div>
                        <table class="table table-striped table-bordered table-responsive-sm table-configuration">
                            <thead>
                            <th>
                                کد رایانه
                            </th>
                            <th>
                                کد پستی
                            </th>
                            
                            <th>
                                تعداد تلاش
                            </th>
                            <th>
                             </th>
                            

                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {


                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Code)
                                        </td>  <td>
                                            @Html.DisplayFor(modelItem => item.CountTry)
                                        </td>
	                                    <td>
		                                  
											<a asp-action="DeleteBlockPostCode" asp-route-id="@item.Id" class="danger border-0 bg-transparent  p-0 btn-delete" data-original-title="ویرایش" title="ویرایش">
												<i class="fa fa-trash-o font-medium-3 mr-2"></i>
											</a>
		                  
	                                    </td>


                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

