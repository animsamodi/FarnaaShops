@model IEnumerable<EShop.DataLayer.Entities.Seri.ProductPricePage>

@{
    ViewData["Title"] = "صفحه ی لیست قیمت محصولات";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Html.Partial("_alert")

<section id="extended">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">صفحه ی لیست قیمت محصولات</h4>
                    </div>
                </div>
                <div class="card-body">

                    <div class="card-block">
                        <div class="box-header with-border">
                            <a asp-action="Create" class="btn btn-primary mb-2">
                                <i class="ft-plus"></i>
                                افزودن
                            </a>
                        </div>
                        <table class="table table-striped table-bordered table-responsive-sm table-configuration">
                            <thead>

                            <th>
                                    @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.CategoryId)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.BrandId)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.SeriId)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.Url)
                            </th>
                            <th>
                            </th>


                            <th></th>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>

                                        <td>
                                            @item.Category?.EnTitle
                                        </td>
                                        <td>
                                            @item.Brand?.EnTitle
                                        </td>

                                        <td>
                                            @item.ProductSeri?.EnTitle
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Url)
                                        </td>



                                        <td>
                                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">ویرایش</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">حذف</a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

