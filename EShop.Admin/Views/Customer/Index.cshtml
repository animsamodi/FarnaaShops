@{
    ViewData["Title"] = "لیست مشتریان";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}@using EShop.Core.Helpers
@using EShop.DataLayer.Enum
@model IEnumerable<EShop.DataLayer.Entities.User.User>

<section id="extended">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">لیست مشتریان</h4>
                    </div>
                </div>
                <div class="card-body">

                    <div class="card-block">
                        @if (Model.Any())
                        {




                            <table class="table font-size-10  table-condensed  table-striped table-bordered table-responsive-sm table-configuration">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>              
                                            @Html.DisplayNameFor(model => model.Id)
                                        </th>
                                        <th>              
                                            @Html.DisplayNameFor(model => model.FullName)
                                        </th>
                                        <th>              
                                            @Html.DisplayNameFor(model => model.Phone)
                                        </th>
                                        <th>              
                                            @Html.DisplayNameFor(model => model.NatioalCode)
                                        </th>
                                        
                                         
                                   
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        

                                        var detId = "tbl_Det_" + item.Id;
                                        <tr data-toggle="collapse" data-target="#@detId" class="accordion-toggle">
                                            <td><button class="btn btn-primary mb-0"><span class="fa fa-eye"></span> آدرس ها </button></td>
                                            <td>@item.Id</td>
                                            <td>@item.FullName</td>
                                            <td>@item.Phone</td>
                                            <td>@item.NatioalCode</td>

                                        
                                           
                                            
                                        </tr>

                                        <tr>
                                            <td colspan="12" class="hiddenRow">
                                                <div class="accordian-body collapse" id="@detId">
                                                        <table class="table table-dark table-striped">
                                                        <thead>
                                                            <tr class="primary">
                                                                <th>نام و نام خانوادگی </th>
                                                                <th>شماره تلفن</th>
                                                                <th>استان</th>
                                                                <th>شهر</th>
                                                                <th>آدرس پستی</th>
                                                                <th>کد پسنی</th>
                                                            </tr>
                                                        </thead>

                                                        <tbody>
                                                            @foreach (var product in item.UserAddresses)
                                                            {
                                                            <tr>

                                                                <td>@product.FullName</td>
                                                                <td>@product.Phone </td>
                                                                <td> @product.Province.ProvinceName</td>
                                                                <td> @product.City.CityName</td>
                                                                <td>@product.PostalAddress </td>
                                                                <td>@product.PostalCode </td>
 
                                                            </tr>

                                                            }



                                                        </tbody>
                                                    </table>

                                                </div>
                                            </td>
                                        </tr>




                                    }
                                </tbody>
                            </table>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




