@model IEnumerable<EShop.DataLayer.Entities.Banner.BannerImage>

@{
    ViewData["Title"] = "لیست بنر ها";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Html.Partial("_alert")

<section id="extended">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">لیست بنر ها</h4>
                    </div>
                </div>
                <div class="card-body">

                    <div class="card-block">
                        
                        <table class="table table-striped table-bordered table-responsive-sm table-configuration">
                            <thead>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TypeSystem)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BannerType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th>
تصویر                            </th>
                            <th></th>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TypeSystem)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BannerType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsActive)
                                        </td>
      
                                        <td>
                                            @Html.Raw((String.IsNullOrEmpty(item.ImageName) ? "" : "<img src='https://media.farnaa.com/media/" + item.ImageName + "' class='thumbnail' width='200' />"))
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="EditBannerImage" asp-route-id="@item.Id">ویرایش</a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

 