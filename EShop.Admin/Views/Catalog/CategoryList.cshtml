@model IEnumerable<EShop.DataLayer.Entities.Category.Category>

@{
    ViewData["Title"] = "لیست دسته بندی ها";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Html.Partial("_alert")

<div class="modal fade in" id="modal-delete" style="padding-right: 17px;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title"> حذف</h4>
            </div>
            <div class="modal-body">
                <p>آیا میخواهید این دسته بندی را حذف کنید؟</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">خیر</button>
                <form asp-action="DeleteCategory">
                    <input type="hidden" name="id" class="deleteid" />

                    <button type="submit" class="btn btn-primary">بله</button>
                </form>
            </div>
        </div>
        
    </div>
    
</div>
<section id="extended">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">لیست دسته بندی ها</h4>
                    </div>
                </div>
                <div class="card-body">

                    <div class="card-block">
                        <div class="box-header with-border">
                            <a asp-action="CreateCategory" class="btn btn-primary mb-2">
                                <i class="ft-plus"></i>
                                ایجاد دسته بندی
                            </a>
                        </div>
                        <table class="table table-striped table-bordered table-responsive-sm table-configuration">
                            <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FaTitle)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EnTitle)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImgName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descrption)
                                </th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FaTitle)
                                        </td>
                                        <td>
                                            @Html.Raw(System.Text.Encodings.Web.HtmlEncoder.Default.Encode(item.FaTitle))
                                        </td>
                                        <td>

                                            @Html.Raw((String.IsNullOrEmpty(item.ImgName) ? "" : "<img src='https://media.farnaa.com/media/" + @item.ImgName + "' class='thumbnail' width='150' />"))

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Descrption)
                                        </td>
                                        <td>
                                            <a asp-action="EditCategory" asp-route-id="@item.Id" class="success p-0" data-original-title="ویرایش" title="ویرایش">
                                                <i class="fa fa-pencil font-medium-3 mr-2"></i>
                                            </a>



                                            <button type="button" class="danger border-0 bg-transparent  p-0 btn-delete" delete data-id="@item.Id" data-toggle="modal" data-target="#modal-delete">
                                                <i class="fa fa-trash-o font-medium-3 mr-2"></i>

                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

 


@section Scripts{
    <script src="/Admin/js/components-modal.min.js"></script>

    <script>
        $(".btn-delete").click(function () {
            var id = $(this).data("id");
            $(".deleteid").val(id);
        })
    </script>
}