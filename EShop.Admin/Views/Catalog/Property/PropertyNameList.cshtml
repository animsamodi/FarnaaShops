@model IEnumerable<EShop.DataLayer.Entities.Property.PropertyName>

@{
    ViewData["Title"] = "لیست نام خصوصیات";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section id="extended">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">لیست نام خصوصیات</h4>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["res"] != null)
                    {
                        if (TempData["res"].ToString() == "success")
                        {
                            <div class="alert alert-success alert-dismissible">
                                <button type="button" class="close pull-left" data-dismiss="alert" aria-hidden="true">×</button>

                                عملیات با موفقیت انجام شد
                            </div>
                        }
                        @if (TempData["res"].ToString() == "faild")
                        {
                            <div class="alert alert-danger alert-dismissible">
                                <button type="button" class="close pull-left" data-dismiss="alert" aria-hidden="true">×</button>

                                خطا در انجام عملیات
                            </div>
                        }
                    }
                    <div class="card-block">
                        <div class="box-header with-border">
                            <a asp-action="CreatePropertyName" class="btn btn-primary mb-2">
                                <i class="ft-plus"></i>
                                ایجاد نام خصوصیت جدید
                            </a>
                        </div>
                        <table class="table table-striped table-bordered table-responsive-sm table-configuration">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Title)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Priority)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UseSearch)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UseSummary)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PropertyGroupId)
                                    </th>
                                    <th>
دسته بندی ها                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Priority)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UseSearch)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UseSummary)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PropertyGroup.Title)
                                        </td>
                                        <td>
@foreach (var cat in item.PropertyCategories)
{
    <span>@cat.Category.FaTitle , </span>
}                                        </td>

                                        <td>
                                            <a asp-action="EditPropertyName" asp-route-id="@item.Id" class="btn btn-info">ویرایش</a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

 