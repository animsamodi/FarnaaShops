@model IEnumerable<EShop.Core.ViewModels.Product.RelatedProductForAdmin>

@{
    ViewData["Title"] = "لوازم جانبی";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="extended">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">لوازم جانبی</h4>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["res"] != null)
                    {
                        if (TempData["res"].ToString() == "success")
                        {
                            <div class="alert alert-success alert-dismissible">
                                <button type="button" class="close pull-left" data-dismiss="alert" aria-hidden="true">×</button>

                                عملیات با موفقیت انجام شد
                            </div>
                        }
                        @if (TempData["res"].ToString() == "faild")
                        {
                            <div class="alert alert-danger alert-dismissible">
                                <button type="button" class="close pull-left" data-dismiss="alert" aria-hidden="true">×</button>

                                خطا در انجام عملیات
                            </div>
                        }
                    }
                    <div class="col-12 p-0">
                        <div class="alert alert-dark row p-0 m-0">
                            <div class="col-2">
                                <img src="https://media.farnaa.com/media/@ViewBag.ProductImage" width="100" />
                            </div>
                            <div class="col-10 align-self-center">
                                <h6>@ViewBag.ProductName</h6>
                            </div>
                        </div>
                    </div>
                    <form asp-action="ChangeAccessoriesProduct" method="post">
                        

                  
                        <div class="card-block">
                            <div class="box-header with-border">
                                
                                <button type="submit" class="btn btn-primary mb-2">ثبت تغییرات</button>
                            </div>
                            <input type="hidden" name="productId" value="@ViewBag.ProductId"/>
                            <input type="hidden" name="relatedProducts" id="relatedProducts" value="@ViewBag.RelaredProduct" />
                            <table class="table table-striped table-bordered table-responsive-sm table-configuration">
                                <thead>
                                <tr>
                                    <th>
                                        انتخاب
                                    </th>
                                    <th>
                                        تصویر
                                    </th>
                                    <th>
                                        محصول
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (item.IsRelated)
                                            {
                                                <input type="checkbox" class="chk-related" checked="checked" value="@item.ProductId"/>

                                            }
                                            else
                                            {
                                                <input type="checkbox" class="chk-related" value="@item.ProductId"/>

                                            }
                                        </td>
                                        <td>
                                            @Html.Raw((String.IsNullOrEmpty(item.ProductImage) ? "" : "<img src='https://media.farnaa.com/media/tumb/" + item.ProductImage + "' class='thumbnail' width='60' />"))
                                        </td>
                                        <td>

                                            @item.ProductTitle
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script type="text/javascript">
        $("#btn-select-All").click(function() {
            $('.chk-related').prop('checked', true);
        });


        $(".chk-related").change(function() {
            var relatedProducts = $("#relatedProducts").val();
            var relate = $(this).val();
            if (this.checked) {
                relatedProducts = relatedProducts + "," + relate;
            } else {
                relatedProducts = relatedProducts.replace(relate, "");
            }
            $("#relatedProducts").val(relatedProducts);

        });
    </script>
}
