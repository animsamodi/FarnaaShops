@model IEnumerable<EShop.DataLayer.Entities.Product.ProductImage>
@using EShop.DataLayer.Entities.Variety
@{
    ViewData["Title"] = "گالری محصول";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var productId = ViewBag.productid;
    var productOptions = ViewBag.ProductOptions as List<ProductOption>;
}
<div class="col-12 p-0">
    <div class="alert alert-dark row">
        <div class="col-2">
            <img src="https://media.farnaa.com/media/@ViewBag.ProductImage" width="100" />
        </div>
        <div class="col-10 align-self-center">
            <h6>@ViewBag.ProductName</h6>
        </div>
    </div>
</div>
<div class="content">
    @if (TempData["res"] != null)
    {
        if (TempData["res"].ToString() == "success")
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close pull-left" data-dismiss="alert" aria-hidden="true">×</button>

                عملیات با موفقیت انجام شد
            </div>
        }
        @if (TempData["res"].ToString() == "faild")
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close pull-left" data-dismiss="alert" aria-hidden="true">×</button>

                خطا در انجام عملیات
            </div>
        }
    }

    <section id="extended">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title-wrap bar-success">
                            <h4 class="card-title">لیست تصاویر محصول</h4>
                        </div>
                    </div>
                    <div class="card-body">

                        <div class="card-block">
                            <div class="box-header with-border">

                                <a class="btn btn-primary mb-2" data-toggle="modal" data-target="#modal-add">
                                    <i class="ft-plus"></i>
                                    افزودن تصویر جدید
                                </a>
                                <a asp-action="ProductListContainer" class="btn btn-warning mt-1">بازگشت به لیست</a>

                            </div>
                            <table class="table table-responsive-md text-center">
                                <thead>
                                <th>
                                        @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                        @Html.DisplayNameFor(model => model.ImgName)
                                </th>
                                <th>

                                    رنگ محصول
                                </th>

                                <th>
                                        
                                </th>

                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Id)
                                            </td>
                                            <td>
                                                <img src="https://media.farnaa.com/media/@item.ImgName" class="thumbnail" width="150" />
                                            </td>
                                             <td>
                                                @(item.ProductOption == null ? "-" : item.ProductOption.Name)
                                                </td>
                                            <td>
                                                <a asp-action="DeleteGalleryImage" asp-route-id="@item.Id" asp-route-productId="@item.ProductId" class="btn btn-sm btn-danger">حذف</a>
                                            </td>
                                           
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>




    <div class="modal fade in" id="modal-add" style="padding-right: 17px;">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="CreateProductImage" enctype="multipart/form-data">
                    <div class="modal-header">
                        <h4 class="modal-title"> ثبت تصویر</h4>

                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>تصویر مورد نظر را انتخاب کنید</p>
                        <div class="form-control">
                            <input type="hidden" value="@productId" name="productId" />
                            <input type="file" accept="image/*" name="imagname" />
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="productOptionId">
                                @foreach (var item in productOptions.Distinct().ToList())
                                {
                                    <option value=@item.Id>@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">انصراف</button>


                        <button type="submit" class="btn btn-success">ثبت</button>

                    </div>
                </form>
            </div>

        </div>

    </div>

    @section Scripts{
    <script>
        $(".btn-delete").click(function () {
            var id = $(this).data("id");
            $(".deleteid").val(id);
        })
    </script>
    }
