@model EShop.Core.ViewModels.EditBrandViewModel

@{
    ViewData["Title"] = "ویرایش برند";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var brandid = ViewBag.brandid;
    var imgname = ViewBag.imagname;
}

    <div class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">ویرایش برند  </h3>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="EditBrand" enctype="multipart/form-data">
                        <div class="box-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" name="brandid" value="@brandid" />
                            <input type="hidden" name="imgname" value="@imgname" />

                            <div class="form-group">
                                <label asp-for="FaTitle" class="control-label"></label>
                                <input asp-for="FaTitle" class="form-control" />
                                <span asp-validation-for="FaTitle" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EnTitle" class="control-label"></label>
                                <input asp-for="EnTitle" class="form-control" />
                                <span asp-validation-for="EnTitle" class="text-danger"></span>
                            </div>
                            <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                <fieldset class="form-group">
                                    <label asp-for="Order" class="control-label"></label>
                                    <input asp-for="Order" dir="ltr" class="form-control" />
                                    <span asp-validation-for="Order" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="form-group">
                                @Html.Raw((String.IsNullOrEmpty(ViewBag.imagname) ? "" : "<img src='https://media.farnaa.com/media/" + ViewBag.imagname + "' class='thumbnail' width='150' />"))
                            </div>
                            <div class="form-group">
                                <label asp-for="Image" class="control-label"></label>
                                <input asp-for="Image" type="file" accept="image/*" class="form-control" />
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Descrption" class="control-label"></label>
                                <input asp-for="Descrption" class="form-control" />
                                <span asp-validation-for="Descrption" class="text-danger"></span>
                            </div>
                            
                            <div class="col-xl-12 col-lg-12 col-md-12 mb-1">
                                <fieldset class="form-group">
                                    <label asp-for="KeyWord" class="control-label"></label>
                                    <textarea class="form-control" asp-for="KeyWord" rows="3"></textarea>
                                    <span asp-validation-for="KeyWord" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 mb-1">
                                                            <fieldset class="form-group">
                                                                <label asp-for="FAQSchema" class="control-label"></label>
                                                                <textarea class="form-control" asp-for="FAQSchema" rows="3"></textarea>
                                                                <span asp-validation-for="FAQSchema" class="text-danger"></span>
                                                            </fieldset>
                                                        </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 mb-1">
                                <fieldset class="form-group">
                                    <label>
                                        <input asp-for="IsShowInFirstPage" /> @Html.DisplayNameFor(model => model.IsShowInFirstPage)
                                    </label>
                                </fieldset>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="ثبت" class="btn btn-success" />
                                <a asp-action="BrandList" class="btn btn-danger">انصراف</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

       </div></div>
