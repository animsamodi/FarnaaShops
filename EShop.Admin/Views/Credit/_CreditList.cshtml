@using EShop.Core.Helpers
@model IEnumerable<EShop.Core.ViewModels.Credit.CreditUserListViewModel>

@{
    Layout = null;
    int pagecount = (int)Math.Ceiling((double)ViewBag.count / 25);
    int pagenumber = ViewBag.PageNumber;
}

<table class="table table-responsive-md table-bordered table-striped text-center">
    <thead>
        <tr class="font-size-10">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RealLegal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.NameUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPhone)
            </th>




            <th>
                @Html.DisplayNameFor(model => model.UserCodeMeli)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.CreditStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcceptPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdateDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="font-size-10">

                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>

                <td>
                    @Enumerations.GetEnumDescription(item.RealLegal)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NameUser)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UserPhone)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UserCodeMeli)
                </td>
                <td>
                    @Enumerations.GetEnumDescription(item.CreditStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcceptPrice)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.LastUpdateDate)
                </td>






                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary btn-sm" asp-action="Detail" asp-controller="Credit"   asp-route-id="@item.Id">جزئیات</a>
                    
                    </div>



                </td>
            </tr>
        }
    </tbody>
</table>
<div class="col-12 text-center" id="productlist">
    @(pagecount > 1 ? Html.Raw(pagecount.GetPaging(pagenumber, "js-pager-item")) : Html.Raw(""))

</div>


<script>
    $('#productlist').delegate(".js-pager-item", "click", function () {
        var pagenum = parseInt($(this).data("pagenumber"));
        $.ajax({
            type: 'GET',
            url: '/credit/CreditList',
            data: { pagenumber: pagenum },
            success: function (res) {
                $("#list").html(res);
            }
        });
    });

</script>
