@model EShop.Core.ViewModels.Credit.CreditBillViewModel

@using EShop.DataLayer.Enum
 

@{
    ViewBag.Title = "جزئیات فیش پرداخت";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-success">
                    <h4 class="card-title mb-0">جزئیات فیش</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="px-3">
                    <form class="form" asp-action="EditStatusBill" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id"/>
                        <div class="form-body">

                            <div class="row">

                                <div class="form-checkout-row row m-0 py-3">
                                    <h6 class="user-form-title col-12 col-12">مشخصات کاربر</h6>

                                    <div class="col-lg-4 col-md-6 col-sm-12">
                                        <label asp-for="FullName"> </label>
                                        <input type="text" asp-for="FullName" class=" form-control" disabled="disabled">
                                        <span asp-validation-for="FullName" class="text-danger  "></span>
                                    </div>
                                    <div class="col-lg-4 col-md-6 col-sm-12">
                                        <label asp-for="Phone"> </label>
                                        <input type="text" asp-for="Phone" class=" form-control" disabled="disabled">
                                        <span asp-validation-for="Phone" class="text-danger  "></span>
                                    </div>
                                    <div class="col-lg-4 col-md-6 col-sm-12">
                                        <label asp-for="NatioalCode"> </label>
                                        <input type="text" asp-for="NatioalCode" class=" form-control" disabled="disabled">
                                        <span asp-validation-for="NatioalCode" class="text-danger  "></span>
                                    </div>
                                    
                                    <h6 class="user-form-title col-12">اطلاعات واریزی </h6>

                                    <div class="col-lg-4 col-md-6 col-sm-12">
                                        <label asp-for="Bank"> </label>
                                        <input type="text" asp-for="Bank" class=" form-control" disabled="disabled">
                                        <span asp-validation-for="Bank" class="text-danger  "></span>
                                    </div>
                                    <div class="col-lg-4 col-md-6 col-sm-12">
                                        <label asp-for="ShomareKart"> </label>
                                        <input type="text" asp-for="ShomareKart" class=" form-control" disabled="disabled">
                                        <span asp-validation-for="ShomareKart" class="text-danger  "></span>
                                    </div>
                                    <div class="col-lg-4 col-md-6 col-sm-12">
                                        <label asp-for="Price"> </label>
                                        <input type="text" asp-for="Price" class=" form-control" disabled="disabled">
                                        <span asp-validation-for="Price" class="text-danger  "></span>
                                    </div>
                                    <div class="col-lg-4 col-md-6 col-sm-12">
                                        <label asp-for="Code"> </label>
                                        <input type="text" asp-for="Code" class=" form-control" disabled="disabled">
                                        <span asp-validation-for="Code" class="text-danger  "></span>
                                    </div>
                                    <div class="col-lg-4 col-md-6 col-sm-12">
                                        <label asp-for="PrDatePay"> </label>
                                        <input type="text" asp-for="PrDatePay" class=" form-control date-piker" disabled="disabled">
                                        <span asp-validation-for="PrDatePay" class="text-danger  "></span>
                                    </div>
                                     
                                    <div class="col-lg-8 col-md-8 col-sm-12">
                                        <label asp-for="Description"> </label>
                                        <textarea rows="1" cols="30" asp-for="Description" class="textarea-name-checkout form-control" disabled="disabled"></textarea>
                                        <span asp-validation-for="Description" class="text-danger  "></span>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-12">
                                        <label asp-for="Image"> </label>
                                        <a href="https://media.farnaa.com/media/@Model.Image" target="_blank">
                                            <img class="img-fluid" src="https://media.farnaa.com/media/@Model.Image"/>
                                        </a>                                    </div>
                                     

                                </div>
                                <div class="col-lg-12 user-form-divider">
                                    <hr />

                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <label asp-for="Status"> </label>
                                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<EnumCreditStatus>()" class=" form-control">
                                        <option value="">- انتخاب کنید -</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger  "></span>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <label asp-for="AdminMessage"> </label>
                                    <textarea rows="2" cols="30" asp-for="AdminMessage" class="textarea-name-checkout form-control"></textarea>
                                    <span asp-validation-for="AdminMessage" class="text-danger  "></span>
                                </div>
                                <div class="col-lg-12 user-form-divider">
                                    <hr />

                                </div>
                                
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    <label asp-for="ConfirmPrice"> </label>
                                    <input type="text" asp-for="ConfirmPrice" class=" form-control format-number-ziro">
                                    <span asp-validation-for="ConfirmPrice" class="text-danger  "></span>
                                </div>

                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="text-right">
                                <button type="submit" class="btn btn-primary mr-1">
                                    ثبت
                                    <i class="ft-thumbs-up position-right"></i>
                                </button>
                                <a asp-action="CreditList" class="btn btn-warning">بازگشت به لیست</a>

                            </div>
                        </div>
                    </form>
                </div>  
            </div>
        </div>
    </div>
</div>

