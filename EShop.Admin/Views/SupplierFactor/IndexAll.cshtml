@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<EShop.DataLayer.Entities.SupplierFactor>

@{
    ViewData["Title"] = "مدیریت همه سفارشات تامین کننده ها";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Html.Partial("_alert")

<section id="extended">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">مدیریت همه سفارشات تامین کننده ها</h4>
                    </div>
                </div>
                <div class="card-body">

                    <div class="card-block">
                       
                        <table class="table table-striped table-bordered table-responsive-sm table-configuration">
                            <thead>
                            
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.SupplierId)
                            </th> 
                            <th>
                                    @Html.DisplayNameFor(model => model.PrDateOrder)
                            </th> 
                            <th>
                                    @Html.DisplayNameFor(model => model.FactorNumber)
                            </th> 
                            <th>
                                    @Html.DisplayNameFor(model => model.SumPrice)
                            </th> 
                            <th>
                                    @Html.DisplayNameFor(model => model.PaymentPrice)
                            </th> 
                            <th>
                             </th>
                          
                        
                            <th></th>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Supplier.Company)
                                        </td>
                                         
                                          <td>
                                            @Html.DisplayFor(modelItem => item.PrDateOrder)
                                        </td> 
                                          <td>
                                            @Html.DisplayFor(modelItem => item.FactorNumber)
                                        </td> 
                                          <td>
                                            @Html.DisplayFor(modelItem => item.SumPrice)
                                        </td> 
                                          <td>
                                            @Html.DisplayFor(modelItem => item.PaymentPrice)
                                        </td> 
                                        
                                       
 
                                        <td>
                                             <a class="btn btn-info" asp-action="ListSupplierFactorProductsShow" asp-route-id="@item.Id"> محصولات سفارش</a>
 
 
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

