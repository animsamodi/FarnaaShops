
@using EShop.DataLayer.Enum
@model EShop.Core.ViewModels.CreateIndexLayoutViewModel

@{
    ViewData["Title"] = "ویرایش";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Styles
{
    <link href="~/css/bootstrap-multiselect.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-success">
                    <h4 class="card-title mb-0">ویرایش</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="px-3">
                    <form class="form" asp-action="Edit" enctype="multipart/form-data">
                        <div class="form-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Id" type="hidden" />
                            <input asp-for="Image1" type="hidden"/>
                            <input asp-for="Image2" type="hidden"/>
                            <input asp-for="Image3" type="hidden"/>
                            <input asp-for="Image4" type="hidden"/>
                            <input asp-for="BgImage" type="hidden"/>
                            <input asp-for="SideImage" type="hidden"/>
                            <div class="row">
                                 
                                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                    <fieldset class="form-group">
                                        <label asp-for="TypeSystem" class="control-label"></label>
                                        <select asp-for="TypeSystem"
                                                asp-items="Html.GetEnumSelectList<EnumTypeSystem>()"
                                                class="form-control">
                                        </select>
                                        <span asp-validation-for="TypeSystem" class="text-danger"></span>
                                    </fieldset>
                                </div>
                                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                    <fieldset class="form-group">
                                        <label asp-for="Type" class="control-label"></label>
                                        <select asp-for="Type"
                                                asp-items="Html.GetEnumSelectList<EnumTypeLayotIndex>()"
                                                class="form-control">
                                        </select>                                        <span asp-validation-for="Type" class="text-danger"></span>
                                    </fieldset>
                                </div>
                                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                    <fieldset class="form-group">
                                        <label asp-for="Order" class="control-label"></label>
                                        <input asp-for="Order" class="form-control" />
                                        <span asp-validation-for="Order" class="text-danger"></span>
                                    </fieldset>
                                </div>
                                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                    <fieldset class="form-group">
                                        <label asp-for="CategoryId" class="control-label"></label>
                                        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.CategoryList, "Id", "Title"))" class="form-control ">
                                            <option value="">--انتخاب کنید--</option>
                                        </select>
                                        <span asp-validation-for="CategoryId" class="text-danger"></span>

                                    </fieldset>
                                </div>
                                <div class="col-xl-4 col-lg-4 col-md-12 mb-1">
                                    <fieldset class="form-group">
                                        <label asp-for="BrandId" class="control-label"></label>
                                        <select asp-for="BrandId" asp-items="@(new SelectList(ViewBag.BrandList, "Id", "Title"))" class="form-control ">
                                            <option value="">--انتخاب کنید--</option>

                                        </select>
                                        <span asp-validation-for="BrandId" class="text-danger"></span>
                                    </fieldset>
                                </div>

                                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                    <fieldset class="form-group">
                                        <label asp-for="Title" class="control-label"></label>
                                        <input asp-for="Title" class="form-control" />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </fieldset>
                                </div>
                                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                    <fieldset class="form-group">
                                        <label asp-for="Count" class="control-label"></label>
                                        <input asp-for="Count" class="form-control" />
                                        <span asp-validation-for="Count" class="text-danger"></span>
                                    </fieldset>
                                </div>
                                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                    <fieldset class="form-group">
                                        <label asp-for="Sort" class="control-label"></label>
                                        <select asp-for="Sort"
                                                asp-items="Html.GetEnumSelectList<EnumSortLayoutIndex>()"
                                                class="form-control">
                                        </select>
                                        <span asp-validation-for="Sort" class="text-danger"></span>
                                    </fieldset>
                                </div>

                                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                    <fieldset class="form-group">
                                        <label asp-for="Url" class="control-label"></label>
                                        <input asp-for="Url" class="form-control" />
                                        <span asp-validation-for="Url" class="text-danger"></span>
                                    </fieldset>
                                </div>
                                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                    <fieldset class="form-group">
                                        <label asp-for="Image1FormFile" class="control-label"></label>
                                        <img width="100" src="https://media.farnaa.com/media/@Model.Image1" class="img-fluid p-3" />
                                        <input asp-for="Image1FormFile" type="file" class="form-control" />
                                        <span asp-validation-for="Image1FormFile" class="text-danger"></span>
                                    </fieldset>
                                </div> <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                    <fieldset class="form-group">
                                        <label asp-for="ImageUrl1" class="control-label"></label>
                                        <input asp-for="ImageUrl1" class="form-control" />
                                        <span asp-validation-for="ImageUrl1" class="text-danger"></span>
                                    </fieldset>
                                </div>
                                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                    <fieldset class="form-group">
                                        <label asp-for="Image2FormFile" class="control-label"></label>
                                        <img width="100" src="https://media.farnaa.com/media/@Model.Image2" class="img-fluid p-3" />

                                        <input asp-for="Image2FormFile" type="file" class="form-control" />
                                        <span asp-validation-for="Image2FormFile" class="text-danger"></span>
                                    </fieldset>
                                </div> <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                    <fieldset class="form-group">
                                        <label asp-for="ImageUrl2" class="control-label"></label>
                                        <input asp-for="ImageUrl2" class="form-control" />
                                        <span asp-validation-for="ImageUrl2" class="text-danger"></span>
                                    </fieldset>
                                </div>
                                    <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <label asp-for="Image3FormFile" class="control-label"></label>
                                            <img width="100" src="https://media.farnaa.com/media/@Model.Image3" class="img-fluid p-3" />
                                            <input asp-for="Image3FormFile" type="file" class="form-control" />
                                            <span asp-validation-for="Image3FormFile" class="text-danger"></span>
                                        </fieldset>
                                    </div> <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <label asp-for="ImageUrl3" class="control-label"></label>
                                            <input asp-for="ImageUrl3" class="form-control" />
                                            <span asp-validation-for="ImageUrl3" class="text-danger"></span>
                                        </fieldset>
                                    </div>
                                    <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <label asp-for="Image4FormFile" class="control-label"></label>
                                            <img width="100" src="https://media.farnaa.com/media/@Model.Image4" class="img-fluid p-3" />

                                            <input asp-for="Image4FormFile" type="file" class="form-control" />
                                            <span asp-validation-for="Image4FormFile" class="text-danger"></span>
                                        </fieldset>
                                    </div> <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <label asp-for="ImageUrl4" class="control-label"></label>
                                            <input asp-for="ImageUrl4" class="form-control" />
                                            <span asp-validation-for="ImageUrl4" class="text-danger"></span>
                                        </fieldset>
                                    </div>
                                    <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <label asp-for="SideImageFormFile" class="control-label"></label>
                                            <img width="100" src="https://media.farnaa.com/media/@Model.SideImage" class="img-fluid p-3" />

                                            <input asp-for="SideImageFormFile" type="file" class="form-control" />
                                            <span asp-validation-for="SideImageFormFile" class="text-danger"></span>
                                        </fieldset>
                                    </div>
                                    <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <label asp-for="BgImageFormFile" class="control-label"></label>
                                            <img width="100" src="https://media.farnaa.com/media/@Model.BgImage" class="img-fluid p-3" />

                                            <input asp-for="BgImageFormFile" type="file" class="form-control" />
                                            <span asp-validation-for="BgImageFormFile" class="text-danger"></span>
                                        </fieldset>
                                    </div>
                                <div class="col-xl-12 col-lg-12 col-md-12 mb-1">
                                    <fieldset class="form-group">
                                        <label>
                                            <input asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                                        </label>
                                    </fieldset>
                                </div>
                                <hr />

                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="text-right">
                                <button type="submit" class="btn btn-primary mr-1">
                                    ثبت
                                    <i class="ft-thumbs-up position-right"></i>
                                </button>
                                <a asp-action="Index" class="btn btn-warning">بازگشت به لیست</a>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

