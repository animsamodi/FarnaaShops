@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<EShop.DataLayer.Entities.Variety.ColleaguePlusPriceRange>

@{
    ViewData["Title"] = "رنج تغییرات قیمت فرنا پلاس همکار";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Html.Partial("_alert")

<section id="extended">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">سری محصولات</h4>
                    </div>
                </div>
                <div class="card-body">

                    <div class="card-block">
                        <div class="box-header with-border">
                            <a asp-action="Create" class="btn btn-primary mb-2">
                                <i class="ft-plus"></i>
                                افزودن
                            </a>
                            <a asp-action="ResetCustomPrice" class="btn btn-danger mb-2">
                                <i class="ft-refresh-cw"></i>
                                رست کردن قیمت پلاس همکار
                            </a>
                        </div>
                        <table class="table table-striped table-bordered table-responsive-sm table-configuration">
                            <thead>
                            
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                    <th>
                                @Html.DisplayNameFor(model => model.CategoryId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BrandId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SeriId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MinPrice)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MaxPrice)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ChangePricePercent)
                            </th>
                            <th>
                             </th>
                          
                        
                            <th></th>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => item.Id)
                                        </td> 
                                         
                                          <td>
                                            @item.Category?.FaTitle
                                        </td>
                                          <td>
                                              @item.Brand?.FaTitle
                                        </td>
                                        
                                          <td>
                                              @item.ProductSeri?.Title
                                        </td>
                                        <td>
                                            @item.MinPrice.ToString("N0")            
                                            </td> <td>
                                            @item.MaxPrice.ToString("N0")

                                         </td> <td>
                                            @item.ChangePricePercent %

                                         </td> 
                                       
 
                                        <td>
                                            <a class="btn btn-success" asp-action="UpdatePrice" asp-route-id="@item.Id">به روز رسانی قیمت</a>
                                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">ویرایش</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">حذف</a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

