@model AddressListViewModel
@{
    Layout = null;
}
<div class="c-profile_nav profile-title">
    <h4>آدرس‌ها</h4>
</div>


<div class="row">
    <a asp-action="CreateAddress" class="btn-add">افزودن آدرس جدید </a>

</div>
    <div class="row">
        @if (Model.AddressList.Any())
        {
            foreach (var item in Model.AddressList)
            {
                <div class="mt-4  col-md-6">
                    <div class="profile-stats ">
                        <div class="profile-address">
                            <div class="box-header">
                                <span class="box-title">@item.CityName</span>
                                @if (item.IsDefault)
                                {
                                    <a class="is-default-address is-default-address-active">
                                        <i class="mdi mdi-check"></i>
                                    </a>
                                }
                                else
                                {
                                    <a class="is-default-address" asp-controller="Profile" asp-area="User" asp-action="ChangeDefaultUserAddress" asp-route-id="@item.UserAddressId">
                                        <i class="mdi mdi-check"></i>
                                    </a>
                                }
                            </div>
                            <div class="profile-address-item">
                                <div class="profile-address-item-top">
                                    <div class="profile-address-item-title"> @item.ProvinceName، ‌ @item.CityName</div>
                            


                                </div>

                                <div class="profile-address-content">
                                    <ul class="profile-address-info">
                                        <li>
                                            <div class="profile-address-info-item location">
                                                <i class="mdi mdi-map-outline"></i> @item.ProvinceName، ‌ @item.CityName,، @item.PostalAddress
                                            </div>
                                        </li>
                                        <li>
                                            <div class="profile-address-info-item location">
                                                <i class="mdi mdi-email-outline"></i> @item.PostalAddress
                                            </div>
                                        </li>
                                        <li>
                                            <div class="profile-address-info-item location">
                                                <i class="mdi mdi-phone"></i> @item.Phone
                                            </div>
                                        </li>
                                        <li>
                                            <div class="profile-address-info-item location">
                                                <i class="mdi mdi-account"></i> @item.FullName
                                            </div>
                                        </li>
                                      
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                  
                </div>
            }

        }
        else
        {
            <div class="profile-alert-container col-9 m-auto">
                <h6>
                    اطلاعاتی برای نمایش وجود ندارد
                </h6>
            </div>
        }

    </div>

















