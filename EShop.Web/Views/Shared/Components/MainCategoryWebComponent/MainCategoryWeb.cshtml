@model IEnumerable<EShop.DataLayer.Entities.CategotyMain>

@{
    Layout = null;
}

  <div class="container">
        <div class="row">
            <div class="promotion-categories-container mt-4 mb-4">
                <div class="box-overlay"></div>

                <h1 class="promotion-categories-title">فروشگاه اینترنتی فرنا</h1>
                <div class="category-container">
                    <div class="promotion-categories">
                        @foreach (var item in Model)
                        {
                            <a asp-controller="category" asp-action="MainCategory" asp-route-title="@(item.EnTitle != null ? item.EnTitle.Replace(" ", "-") : "")" class="promotion-category">
                                <img class="lazy b-lazy" src="https://farnaa.com/images/bg/bg-square.webp" width="140" height="140" data-src="https://media.farnaa.com/media/@item.Image" alt="@item.Title">
                                <div class="promotion-category-name">@item.Title</div>
                            </a>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>