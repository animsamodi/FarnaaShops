@model Tuple<long, List<EShop.Core.ViewModels.Product.CommentForUserViewModel>>

@{
    Layout = null;
 }
<div class="row">
    <div class="col-lg-5">
        <div class="questions">
            <span class="title">
                نظرات کاربران
            </span>
            <ul class="questions-box">
                @foreach (var item in Model.Item2)
                {
                    <li class="questions-item">
                        <div class="question f-parent">
                            <span class="pic-user">
                                <img src="/new/images/users/user-02.jpg" alt="">
                            </span>
                            <span class="name-box">
                                <p class="name mt-2">
                                    @item.Name
                                </p>
                                @*    <p class="responsibility">
                                                        خریدار محصول
                                                    </p>*@
                            </span>
                            <div class="bottom">
                                @*        <span class="reply">

                                                    </span>*@
                                <span class="date">
                                    @item.CreateDate.ConvertMiladiToShamsi()                                                    </span>
                            </div>
                        </div>
                        <div class="question-text">
                            <p class="font-weight-bold">@item.CommentTitle</p>
                            <p>
                                @item.CommentText                                                     </p>
                        </div>
                    </li>
                    @if (item.Answers != null)
                    {
                        foreach (var answer in item.Answers)
                        {
                            <li class="questions-item response">
                                <div class="question f-parent">
                                    <span class="pic-user">
                                        <img src="~/new/images/users/user-02.jpg" alt="">
                                    </span>
                                    <span class="name-box">
                                        <p class="name">
                                            @answer.Name
                                        </p>
                                        <p class="responsibility">
                                            فروشگاه فرنا
                                        </p>
                                    </span>
                                    <div class="bottom">
                                                          
                                        <span class="date">
                                            @answer.CreateDate.ConvertMiladiToShamsi()
                                        </span>
                                    </div>
                                </div>
                                <div class="question-text">
                                    <p class="font-weight-bold">@answer.AnswerTitle</p>

                                    <p>
                                        @answer.AnswerTitle                                                        </p>
                                </div>
                            </li>
                        }
                    }
                                   
                }
                                       


            </ul>
        </div>
    </div>

    <div class="col-lg-7">
        <div class="comment">
            <span class="title">
                <span>
                    ثبت نظر جدید
                </span>
            </span>
            <div class="comment-box">
                <form asp-area="User" asp-controller="Profile" asp-action="AddUserComment" method="post" id="addCommentForm">
                    <input type="hidden" name="ProductId" value="@Model.Item1" />

                    <span class="top-box">
                        <input  name="Name" type="text" oninput="setCustomValidity('')" oninvalid="this.setCustomValidity('لطفا نام و نام خانوادگی را وارد نمایید')" required="required" placeholder="نام و نام خانوادگی شما (اجباری)">
                        <input  name="Mobile" type="text" placeholder="موبایل شما (اختیاری)">
                        <input  name="CommentTitle" type="text" oninput="setCustomValidity('')" oninvalid="this.setCustomValidity('لطفا عنوان نظر را وارد نمایید')" required="required" placeholder="عنوان نظر شما (اجباری)">

                                                
                                                
                                                
                                                
                                                

                    </span>
                    <textarea class="input-ui pr-2 pt-2" name="CommentText" rows="5" oninput="setCustomValidity('')" oninvalid="this.setCustomValidity('لطفا متن نظر را وارد نمایید')" required="required" placeholder="متن نظر شما (اجباری)" style="height: 120px;"></textarea>
                   @* <div class="col-12 mt-3">
                        <div class="g-recaptcha d-flex justify-content-center" data-sitekey="6LcjEtAeAAAAALXzQnvI6iRs3JhVGBgtyN0mOsgp"></div>
                        <span id="recaptchaerror" class="text-danger"></span>
                    </div>*@
 
                    <button class="trs-3" type="submit">
                        ثبت نظر
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

                    
 


