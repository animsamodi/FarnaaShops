@using EShop.Core.ViewModels.Product
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BasePageWithFilterViewModel
@{
    Layout = null;
}


<div class="filter">

<div class="brand js-filter_box  d-none">
    <div class="title">
        <span>
            فیلتر ها
        </span>
    </div>
    <div class="brand-box">
        <ul class="c-box_cat-list js-filters">
        </ul>
    </div>
</div>
<div class="available">
    <div class="available-stock-switch">
        <label class="available-switch">
            <input class="available-stock-only" type="checkbox" />
            <span class="available-switch-slider round"></span>
        </label>
        <label class="available-stock-switch-text" >فقط کالاهای موجود</label>
     
    </div>
</div>
<div class="available">
    <div class="available-discounted-switch">
        <label class="discounted-switch">
            <input class="available-discounted-only" type="checkbox" />
            <span class="available-switch-slider round"></span>
        </label>   
        <label class="available-stock-switch-text">کالاهای تخفیف دار</label>

    </div>
</div>
@if (Model.SideBarData.Categories.Count > 0)
{
    <div class="brand">
        <div class="title">
            <span>
                دسته بندی محصولات
            </span>
        </div>
        <div class="brand-box">
            <div class="card-main mb-0">
                                @foreach (var item in Model.SideBarData.Categories as List<MainCategoryFilterItem>)
                                {

                                    <span class='c-box_cat-span '>
                                        <a 
                                   class='c-box_cat-link c-box-parent'>
                                          <div class='form-auth-row row-option-filter'>
                                              <label for="#" class="ui-checkbox js-filter_label" data-en='@item.EnglishTitle.ToUrlFormat()'
                                                     data-type="catId" data-id="@item.Id" data-fa="@item.PersianTitle" for="catId @item.Id">
                                                  <input class="js-filter_checkbox" type="checkbox" data-fa="@item.PersianTitle"
                                                         data-type="catId" data-id="@item.Id" id="catId @item.Id">
                                                  <span class="ui-checkbox-check"></span>
                                                  </label>
                                              <label style="font-weight: bold;" for="remember" class="remember-me">
                                                  @item.PersianTitle
                                                  </label>
                                              </div>
                                          
                                                <i class="mdi mdi-chevron-down"></i>
                                        </a>
                                    </span>
                                    @if (item.SubCategory is not null && item.SubCategory.Count > 0)
                                    {
                                        @foreach (var subcategory in item.SubCategory)
                                        {
                                            <div class='form-auth-row row-option-filter'>
                                                <label for="#" class="ui-checkbox js-filter_label" data-en='@subcategory.EnglishTitle.ToUrlFormat()'
                                       data-type="catId" data-id="@subcategory.Id" data-fa="@subcategory.PersianTitle" for="catId @subcategory.Id">
                                                    <input class="js-filter_checkbox" type="checkbox" data-fa="@subcategory.PersianTitle"
                                           data-type="catId" data-id="@subcategory.Id" id="catId @subcategory.Id">
                                                    <span class="ui-checkbox-check"></span>
                                                </label>
                                                <label for="remember" class="remember-me">
                                                    @subcategory.PersianTitle
                                                </label>
                                            </div>
                                        }
                                    }
                                }
                            </div>
        </div>
    </div>

}
@if (Model.SideBarData.Brands != null && Model.SideBarData.Brands.Count != 0)
{
    <div class="brand">
        <div class="title">
            <span>
                براساس برند
            </span>
        </div>
        <div class="brand-box">
            <div class="card-main mb-0">

                @foreach (var item in Model.SideBarData.Brands as List<BrandFilterItem>)
                {

                    <div class="form-auth-row row-option-filter">
                        <label for="#" class="ui-checkbox js-filter_label" data-en='@item.EnglishTitle'
                               data-type="brand" data-id="@item.Id" data-fa="@item.PersianTitle" for="brand @item.Id">
                            <input class="js-filter_checkbox" type="checkbox" data-fa="@item.PersianTitle" data-type="brand" data-id="@item.Id" id="brand @item.Id">
                            <span class="ui-checkbox-check"></span>
                        </label>
                        <label for="remember" class="remember-me">
                            @item.PersianTitle - @item.EnglishTitle
                        </label>
                    </div>
                }
            </div>
        </div>
    </div>

}
 

@if (@Model.SideBarData.MaxPrice > 0)
{
    <div class="pric">
        <div class="title">
            <span>
                براساس قیمت
            </span>
        </div>
        <div class="pric-box">
            <div class="c-filter">
                <div class="c-box_filter-slider">
                    <div class="rangeSlider-desktop"></div>
                </div>

                <ul class="c-filter_range">
                    <li data-label="از" data-currency="تومان">
                        <input type="text" id="min_price_value" class="js-slider_range-from" data-range="@Model.SideBarData.MinPrice.Value"
                               data-value="@Model.SideBarData.MinPrice.Value" value="@Model.SideBarData.MinPrice.Value" disabled="disabled">
                    </li>

                    <li data-label="تا" data-currency="تومان">
                        <input type="text" id="max_price_value" class="js-slider_range-to" data-range="@Model.SideBarData.MaxPrice.Value"
                               data-value="@Model.SideBarData.MaxPrice.Value" value="@Model.SideBarData.MaxPrice.Value" disabled="disabled">
                    </li>
                </ul>
            </div>
        </div>
    </div>
}
 
</div>


<script src="~/js/vendor/jquery-3.6.0.min.js"></script>
<script>
    var searchmax_price =@(Model.SideBarData.MaxPrice!=null && Model.SideBarData.MaxPrice > 0 ? Model.SideBarData.MaxPrice : 0)

        $(document).ready(function () {
            $('.js-filter_checkbox_categorypage').prop('checked', false);
            tofaprice();
            init_search_category_page(searchmax_price);
    })
</script>