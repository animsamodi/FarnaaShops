                    </ol>
                </nav>
            </div>
        </div>
        @Html.Partial("ProductViewPartials/_SidebarProductsFilter",Model)
    </div>

    <div class="col-lg-9 col-md-8 col-xs-12 p-0">
        @foreach (var category in Model.CategotyMainProductsViewModels)
        {
            var url = "";
            if (string.IsNullOrEmpty(category.Url))
            {
                if (category.BrandId != null)
                {
                    url = Url.Action("SubCategory", "category", new
                    {
                        categoryName = Model.Category.EnglishTitle.ToUrlFormat(),
                        title = category.BrandEnTitle.ToUrlFormat()
                    });
                }
                else if (category.CatId != null)
                {
                    url = Url.Action("SubCategory", "category", new
                    {
                        categoryName = Model.Category.EnglishTitle.ToUrlFormat(),
                        title = category.CatEnTitle.ToUrlFormat()
                    });
                }
            }
            else
            {
                url = category.Url;
            }


            <div class="col-lg-12 col-md-12 col-xs-12 pr order-1 d-block block p-0">
                <div class="slider-widget-products">
                    <div class="widget widget-product card">
                        <header class="card-header">
                            <h2 class="title-one">@category.Title</h2>
                            @if (!string.IsNullOrEmpty(url))
                            {
                                <a href="@url" class="link-show-more">مشاهده همه <i class="fa fa-angle-left ml-2"></i></a>

                            }
                        </header>
                        <div class="swiper mySwiper p-2 pt-4">

                            <div class="swiper-wrapper">
                                @foreach (var item in category.Products.Take(15))
                                {

                                    <div class="swiper-slide">
                                        <div class="item">

                                            <a asp-action="Index" asp-route-category="@item.CategoryEnTitle.ToUrlFormat()" asp-controller="product" asp-route-id="@item.ProductId" asp-route-name="@item.EnTitle.ToUrlFormat()" class="d-block hover-img-link">
                                                <img data-src="https://media.farnaa.com/media/@item.ImgName" src="~/images/bg-product.png" class="img-fluid lazy" alt="@item.FaTitle">
                                            </a>
                                            <div class="owl-item-content">

                                                @if (item.MainPrice > 0)
                                                {
                                                    if (item.DiscountPrice != item.MainPrice)
                                                    {
                                                        decimal disPrice = item.MainPrice - item.DiscountPrice;
                                                        var disPercent = Math.Ceiling(((disPrice * 100) / item.MainPrice));
                                                        <div class="  item-descount">


                                                            @disPercent <span>%</span>

                                                        </div>

                                                    }


                                                }

                                                <div class="post-title mb-2">
                                                    <a asp-action="Index" asp-controller="product" asp-route-category="@item.CategoryEnTitle.ToUrlFormat()" asp-route-id="@item.ProductId" asp-route-name="@item.EnTitle.ToUrlFormat()">
                                                        @item.FaTitle
                                                    </a>
                                                </div>
                                                <div class="price">
                                                    @if (item.MainPrice > 0)
                                                    {
                                                        if (item.DiscountPrice != item.MainPrice)
                                                        {
                                                            var disPrice = item.MainPrice - item.DiscountPrice;
                                                            <div class="col-12">
                                                                <del><span>@item.MainPrice.ToString("N0")<span>تومان</span></span></del>
                                                            </div>
                                                            <div class="col-12">
                                                                <ins><span>@item.DiscountPrice.ToString("N0")<span>تومان</span></span></ins>

                                                            </div>

                                                        }
                                                        else
                                                        {
                                                            <div class="col-12">
                                                                <ins><span>@item.MainPrice.ToString("N0")<span>تومان</span></span></ins>
                                                            </div>

                                                        }

                                                    }
                                                    else
                                                    {
                                                        <div class="  col-12">
                                                            <ins>-- ناموجود --</ins>
                                                        </div>
                                                    }
                                                </div>

                                            </div>

                                            <div class="btn-view-product-container">
                                                <a asp-action="Index" asp-controller="product" asp-route-category="@item.CategoryEnTitle.ToUrlFormat()" asp-route-id="@item.ProductId" asp-route-name="@item.EnTitle.ToUrlFormat()" class="btn-view-product a-hover-1">
                                                    مشاهده
                                                </a>
                                            </div>

                                        </div>
                                    </div>
                                }        @if (!string.IsNullOrEmpty(url) && category.Products.Count > 6)
                                {
                                    <div class="swiper-slide swiper-slide-more">
                                        <div class="swiper-slide-more-content">

                                            <a href="@url" c>مشاهده همه <i class="fa fa-angle-left ml-2"></i></a>

                                        </div>
                                    </div>
                                }

                            </div>

                        </div>

                    </div>
                </div>
